<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Odyssey</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Ideology</li>
      </mods>
      <match Class="PatchOperationSequence">
        <operations>  
        <!-- Rare fishing catches: replace the seed-only option with GauranlenSeed (or remove option if missing). -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingSetMakerDef[@Name="RareFishingCatchesBase"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]/thingSetMaker/fixedParams/filter/thingDefs</xpath>
          <value>
            <thingDefs>
              <li>GauranlenSeed</li>
            </thingDefs>
          </value>
        </li>
        <!-- MapGen_ScarlandsHermeticCrate: replace the seed-only option with GauranlenSeed (or remove option if missing). -->
        <li Class="PatchOperationReplace">
            <xpath>Defs/ThingSetMakerDef[defName="MapGen_ScarlandsHermeticCrate"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]/thingSetMaker/fixedParams/filter/thingDefs</xpath>
            <value>
              <thingDefs>
                <li>GauranlenSeed</li>
              </thingDefs>
            </value>
        </li>
        <!-- MapGen_HighValueCrate: replace the seed-only option with GauranlenSeed (or remove option if missing). -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingSetMakerDef[defName="MapGen_HighValueCrate"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]/thingSetMaker/fixedParams/filter/thingDefs</xpath>
          <value>
            <thingDefs>
              <li>GauranlenSeed</li>
            </thingDefs>
          </value>
        </li>
        <!-- Reward_AncientSafe: replace the seed-only option with GauranlenSeed (or remove option if missing). -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingSetMakerDef[defName="Reward_AncientSafe"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]/thingSetMaker/fixedParams/filter/thingDefs</xpath>
          <value>
            <thingDefs>
              <li>GauranlenSeed</li>
            </thingDefs>
          </value>
        </li>
        <!-- Reward_ArcheanSeed: the def is seed-only; replace to GauranlenSeed (or remove the def if missing). -->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingSetMakerDef[defName="Reward_ArcheanSeed"]//thingDefs</xpath>
          <value>
            <thingDefs>
              <li>GauranlenSeed</li>
            </thingDefs>
          </value>
        </li>
        </operations>
      </match>
      <nomatch Class="PatchOperationSequence">
        <operations>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingSetMakerDef[@Name="RareFishingCatchesBase"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingSetMakerDef[defName="MapGen_ScarlandsHermeticCrate"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingSetMakerDef[defName="MapGen_HighValueCrate"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingSetMakerDef[defName="Reward_AncientSafe"]/root/options/li[thingSetMaker/fixedParams/filter/thingDefs/li="ArcheanSeed"]</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingSetMakerDef[defName="Reward_ArcheanSeed"]</xpath>
        </li>
        </operations>
      </nomatch>
    </match>
  </Operation>
</Patch>